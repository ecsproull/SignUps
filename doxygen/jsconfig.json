{
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",   // Only process file ending in .js, .jsdoc or .jsx
        "include": ["../js"]                       // Check all folders.
    },
    "recurseDepth": 10,                         // Only go 10 levels deep.
    "opts": {
        "destination": "../docs/js/",               // Where I want my docs to be generated.
        "recurse": false                         // Same as using -r or --recurse
    }
}
